@model IEnumerable<WebTravel.Models.TbTour>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="package-item bg-white mb-2">
                <img class="img-fluid" src="~/img/@item.Image" alt="">
                <div class="p-4">
                    <div class="d-flex justify-content-between mb-3">
                        <small class="m-0"><i class="fa fa-map-marker-alt text-primary mr-2"></i>@item.Location</small>
                        <small class="m-0"><i class="fa fa-calendar-alt text-primary mr-2"></i>@item.TimeTravel days</small>
                        <small class="m-0"><i class="fa fa-user text-primary mr-2"></i>2 Person</small>
                    </div>
                    <a class="h5 text-decoration-none" href="">@item.Title</a>
                    <div class="border-top mt-4 pt-4">
                        <div class="d-flex justify-content-between">
                            <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>@item.Star <small>(3)</small></h6>
                            <h5 class="m-0">$@item.Price</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>