@model IEnumerable<WebTravel.Models.TbBlog>

@foreach (var item in Model.Take(3)) // Giới hạn 3 bài viết
{
    string sUrl = $"/Blog/{item.Alias}-{item.BlogId}.html";
    <div class="col-lg-4 col-md-6 mb-4 pb-2">
        <div class="blog-item">
            <div class="position-relative">
                <a href="@sUrl">
                    <img class="img-fluid w-100" src="~/img/@(string.IsNullOrEmpty(item.Image) ? "default.jpg" : item.Image)" alt="@item.Title">
                </a>
                <div class="blog-date">
                    <h6 class="font-weight-bold mb-n1">@item.DayCreated</h6>
                    <small class="text-white text-uppercase">@item.MonthCreated</small>
                </div>
            </div>
            <div class="bg-white p-4">
                <div class="d-flex mb-2">
                    <a class="text-primary text-uppercase text-decoration-none" href="">@item.CreatedBy</a>
                    <span class="text-primary px-2">|</span>
                    <a class="text-primary text-uppercase text-decoration-none" href="">@item.SeoTitle</a>
                </div>
                <a class="h5 m-0 text-decoration-none" href="@sUrl">@item.Title</a>
            </div>
        </div>
    </div>
}
