@model WebTravel.Models.TbTour

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="pagetitle">
    <h1>Thêm Tour</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item">Tours</li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thêm Tour du lịch</h5>

                    <!-- General Form Elements -->
                    <form asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Title" class="col-sm-2 col-form-label">Tiêu đề</label>
                            <div class="col-sm-12">
                                <input asp-for="Title" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Alias" class="col-sm-2 col-form-label">Alias</label>
                            <div class="col-sm-12">
                                <input asp-for="Alias" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="col-sm-2 col-form-label">Mô tả</label>
                            <div class="col-sm-12">
                                <input asp-for="Description" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Detail" class="col-sm-2 col-form-label">Chi tiết</label>
                            <div class="col-sm-12">
                                <textarea asp-for="Detail" class="form-control"></textarea>
                            </div>
                        </div>



                        <div class="form-group">
                            <label asp-for="CategoryTourId" class="col-sm-2 col-form-label">Danh mục</label>
                            <div class="col-sm-12">
                                <select asp-for="CategoryTourId" class="form-control" asp-items="ViewBag.CategoryTourId">
                                    <option value="0" selected>--[Chọn danh mục]--</option>
                                </select>
                                <span asp-validation-for="CategoryTourId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group col-sm-12">
                            <label asp-for="Image" class="col-sm-2 col-form-label">Chọn ảnh</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button type="button" class="btn btn-success" onclick="openDialog()">Chọn một ảnh</button>
                                </div>
                                <input type="text" class="form-control" id="file_input" asp-for="Image" aria-describedby="button-addon2" />
                            </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price" class="col-sm-2 col-form-label">Giá ($)</label>
                            <div class="col-sm-12">
                                <input asp-for="Price" class="form-control">
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <label asp-for="TimeTravel" class="col-sm-2 col-form-label">Thời gian (ngày)</label>
                            <div class="col-sm-12">
                                <input asp-for="TimeTravel" class="form-control">
                            </div>
                        </div>



                        <div class="form-group form-check">
                            <label class="form-check-label mt-3">
                                <input class="form-check-input" asp-for="IsActive" /> Hiển Thị
                            </label>
                        </div>

                        <div class="form-group">

                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary mt-3">Tạo Tour</button>
                            </div>
                        </div>


                    </form><!-- End General Form Elements -->

                </div>
            </div>
        </div>
    </div>

</section>



@{
    var summerNote = new WebTravel.Areas.Admin.Models.SummerNote("#Detail");
    <partial name="_SummerNote" model="summerNote" />
}