@model WebTravel.Models.TbSlide

@{
    ViewData["Title"] = "Delete";

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Xóa Slide</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item">Slides</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Xóa Slide</h5>

                    <!-- General Form Elements -->

                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tiêu Đê: </label>
                            @Html.DisplayFor(model => model.Title)
                        </div>
                        <div class="form-group mt-2">
                            <label for="exampleInputPassword1">Alias: </label>
                            @Html.DisplayFor(model => model.Alias)
                        </div>
                       
                        
                        <div class="form-group">
                            <label for="exampleInputPassword1"></label>
                            <div class="text-center">
                                <img src="~/img/@Model.Image" alt="Tour Image" style="max-width: 100%; height: auto;" />
                            </div>
                        </div>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="SlideId" />
                            <div class="form-group">

                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-danger mt-3">Xóa</button>

                                    <a asp-action="Index" class="btn btn-primary mt-3">Quay lại</a>
                                </div>
                                <p class="text-danger">Bạn có chắc chắn muốn xóa slide này?</p>
                            </div>



                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>
        </div>

</section>


