@model WebTravel.Models.TbMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="pagetitle">
    <h1>Xóa menu</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item">Menus</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Xóa menu</h5>

                    <!-- General Form Elements -->

                    <div class="form-group">
                        <label for="exampleInputEmail1">Tiêu đề</label>
                        <div class="col-sm-2">
                        <input value="@Model.Title" class="form-control" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Alias</label>
                        <div class="col-sm-2">
                        <input value="@Model.Alias" class="form-control" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Mô tả</label>
                          <div class="col-sm-2">
                        <input value="@Model.Description" class="form-control" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Mức</label>
                          <div class="col-sm-2">
                        <input value="@Model.Levels" class="form-control" readonly></div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Menu cha</label>
                          <div class="col-sm-2">
                        <input value="@Model.ParentId" class="form-control" readonly>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputEmail1">Vị trí</label>
                          <div class="col-sm-2">
                        <input value="@Model.Position" class="form-control" readonly>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleInputEmail1">Hiện</label>
                        <td>
                            @if (Model.IsActive)
                            {
                                <i class="fas fa-check text-success"></i> <!-- Dấu tích màu xanh -->
                            }
                            else
                            {
                                <i class="fas fa-times text-danger"></i> <!-- Dấu x màu đỏ -->
                            }
                        </td>

                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MenuId"/>
                        <div class="form-group">

                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-danger mt-3">Xóa</button>

                                <a asp-action="Index" class="btn btn-primary mt-3">Quay lại</a>
                            </div>
                        </div>
                        


                    </form><!-- End General Form Elements -->

                </div>
            </div>
        </div>
    </div>

</section>


