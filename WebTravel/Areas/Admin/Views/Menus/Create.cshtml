@model WebTravel.Models.TbMenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



    <div class="pagetitle">
      <h1>Thêm menu</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
          <li class="breadcrumb-item">Menus</li>
          <li class="breadcrumb-item active">Create</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
              <h5 class="card-title">Thêm menu</h5>

              <!-- General Form Elements -->
                        <form asp-action="Create">
                <div class="form-group">
                  <label asp-for="Title" class="col-sm-2 col-form-label">Tiêu đề</label>
                  <div class="col-sm-12">
                    <input asp-for="Title" class="form-control">
                  </div>
                </div>

                  <div class="form-group">
                  <label asp-for="Alias" class="col-sm-2 col-form-label">Alias</label>
                  <div class="col-sm-12">
                    <input asp-for="Alias" class="form-control">
                  </div>
                </div>

                  <div class="form-group">
                  <label asp-for="Description" class="col-sm-2 col-form-label">Mô tả</label>
                  <div class="col-sm-12">
                    <input asp-for="Description" class="form-control">
                  </div>
                </div>

                  <div class="form-group">
                  <label asp-for="Levels" class="col-sm-2 col-form-label">Mức</label>
                  <div class="col-sm-12">
                    <input asp-for="Levels" class="form-control">
                  </div>
                </div>

                  <div class="form-group">
                  <label asp-for="ParentId" class="col-sm-2 col-form-label">Menu cha</label>
                  <div class="col-sm-12">
                    <input asp-for="ParentId" class="form-control">
                  </div>
                </div>

                  <div class="form-group">
                  <label asp-for="Position" class="col-sm-2 col-form-label">Vị trí</label>
                  <div class="col-sm-12">
                    <input asp-for="Position" class="form-control">
                  </div>
                </div>



                        <div class="form-group form-check">
                            <label class="form-check-label mt-3">
                                <input class="form-check-input" asp-for="IsActive" /> Hiển Thị
                            </label>
                        </div>

                        <div class="form-group">

                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary mt-3">Tạo</button>
                            </div>
                        </div>


              </form><!-- End General Form Elements -->

            </div>
          </div>
          </div>
            </div>
        
    </section>


