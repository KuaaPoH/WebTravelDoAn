@model WebTravel.Models.TbContact
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="pagetitle">
    <h1>Xóa Thư</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item">Contacts</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Xóa Thư</h5>

                    <!-- General Form Elements -->

                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên:    </label>
                            @Html.DisplayFor(model => model.Name)
                        </div>
                        <div class="form-group mt-2">
                            <label for="exampleInputPassword1">Số điện thoại:    </label>
                            @Html.DisplayFor(model => model.Phone)
                        </div>
                        <div class="form-group mt-2">
                            <label for="exampleInputPassword1">Email:   </label>
                            @Html.DisplayFor(model => model.Email)
                        </div>
                        <div class="form-group mt-2">
                            <label for="exampleInputPassword1">Tin nhắn:  </label>
                            @Html.Raw(Model.Message)
                        </div>
                        <div class="form-group mt-2">
                            <label for="exampleInputPassword1">Gửi vào lúc:    </label>
                            @Html.Raw(Model.CreatedDate)
                        </div>
                 
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ContactId" />
                            <div class="form-group">

                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-danger mt-3">Xóa</button>

                                    <a asp-action="Index" class="btn btn-primary mt-3">Quay lại</a>
                                </div>
                                <p class="text-danger">Bạn có chắc chắn muốn xóa thư này?</p>
                            </div>



                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




